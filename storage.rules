rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Each user gets their own folder: users/{uid}/...
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }
    
    // (Optional) Public images like app assets could go here later
    // match /public/{allPaths=**} {
    //   allow read;
    // }
  }
}

